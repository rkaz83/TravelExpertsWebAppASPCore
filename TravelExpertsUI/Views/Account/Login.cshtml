@model Customer
@{
    ViewData["Title"] = "Login";
}
<h1>Login</h1>
<hr />
<div class="col-6">
    <form asp-action="Login">
        <table class="table table-borderless w-auto">
            <tr>
                <td>Username:</td>
                <td><input type="text" asp-for="Username" class="form-control" /></td>
            </tr>
            <tr>
                <td>Password:</td>
                <td><input type="password" asp-for="Password" class="form-control" /></td>
            </tr>
            <tr>
                <td colspan="2">
                    <input type="submit" value="Login" class="btn btn-primary" />
                </td>
            </tr>
        </table>
    </form>
</div>

<div>
    <hr />
    <p>Don't have an account?</p>
    <a class="btn btn-outline-primary col-2" asp-controller="Account" asp-action="Register">Register Now</a>
</div>
