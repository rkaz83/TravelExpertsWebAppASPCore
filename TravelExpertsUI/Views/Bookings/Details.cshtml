@model IEnumerable<TravelExpertsData.Models.BookingDetail>

@*Author: Aaron Li
February 18, 2023*@

@{
    ViewData["Title"] = "Booking Details";
}

<h1>Booking Details</h1>
<hr />
<div>
@foreach (var item in Model) {
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BookingDetailId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(modelItem => item.BookingDetailId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BookingId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(modelItem => item.BookingId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TripStart)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(modelItem => item.TripStart)
        </dd>
            <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TripEnd)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(modelItem => item.TripEnd)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(modelItem => item.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Destination)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(modelItem => item.Destination)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BasePrice)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(modelItem => item.BasePrice)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AgencyCommission)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(modelItem => item.AgencyCommission)
        </dd>
    </dl>
    <hr />
}
</div>

<div>
    <a asp-controller="Bookings" asp-action="Index" class="btn btn-outline-primary">Return to All Bookings</a>
</div>
